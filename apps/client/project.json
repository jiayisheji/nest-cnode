{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/client/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nest-cnode/mvc-plugin:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/client",
        "main": "apps/client/src/main.ts",
        "tsConfig": "apps/client/tsconfig.app.json",
        "assets": [
          "apps/client/src/assets"
        ],
        "isolatedConfig": true,
        "webpackConfig": "apps/client/webpack.config.js",
        "viewOptions": {
          "webpackConfig": "apps/client/view-webpack.config.js",
          "fileReplacements": [
            {
              "replace": "@shared",
              "with": "apps/client/src/views/shared"
            }
          ],
          "stylePreprocessorOptions": {
            "includePaths": [
              "apps/client/src/views/shared/styles"
            ]
          },
          "assets": []
        }
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "inspect": false,
          "main": "apps/client/src/main.prod.ts",
          "viewOptions": {
            "outputHashing": "all",
            "sourceMap": false,
            "webpackConfig": "apps/client/view-webpack.config.js",
            "fileReplacements": [
              {
                "replace": "@shared",
                "with": "apps/client/src/views/shared"
              }
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "apps/client/src/views/shared/styles"
              ]
            },
            "assets": []
          }
        }
      }
    },
    "serve": {
      "executor": "@nest-cnode/mvc-plugin:serve",
      "options": {
        "buildTarget": "client:build",
        "buildTargetOptions": {}
      },
      "configurations": {
        "production": {
          "buildTarget": "client:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/client/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/client/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
